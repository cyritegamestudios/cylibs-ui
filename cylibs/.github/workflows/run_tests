name: Run tests

on:
  push:
  pull_request:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3
      - name: Checks out cylibs

      - name: Install LuaRocks
        uses: leafo/gh-actions-luarocks@v4.3.0

      - name: Setup 
        run: |
          luarocks install busted

      - name: Test
        run: |
          busted -o utfTerminal
